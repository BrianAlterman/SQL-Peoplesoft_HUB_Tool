SELECT A.UNION_CD, B.DESCR, A.BARG_UNIT, A.DESCR, A.WORKGROUP
  FROM PS_AC_BARG_UNIT A, PS_UNION_TBL B
  WHERE ( A.EFFDT =
        (SELECT MAX(A_ED.EFFDT) FROM PS_AC_BARG_UNIT A_ED
        WHERE A.UNION_CD = A_ED.UNION_CD
          AND A.BARG_UNIT = A_ED.BARG_UNIT
          AND A_ED.EFFDT <= SYSDATE)
     AND A.UNION_CD = B.UNION_CD
     AND B.EFFDT =
        (SELECT MAX(B_ED.EFFDT) FROM PS_UNION_TBL B_ED
        WHERE B.UNION_CD = B_ED.UNION_CD
          AND B_ED.EFFDT <= SYSDATE))
  ORDER BY 1, 3
